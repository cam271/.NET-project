@model ChrisDemo.ViewModel.Item.DetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Item</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Item.ItemNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Item.ItemNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Item.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Item.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Item.Category)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Item.Category.Name)
        </dd>

         <dt>
            @Html.DisplayNameFor(model => model.Item.Locations)
        </dt>
        <dd>
            @foreach (var location in Model.Item.Locations)
            {
                @Html.DisplayFor(model => location.Name ) <br />
            }
        </dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Item.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>