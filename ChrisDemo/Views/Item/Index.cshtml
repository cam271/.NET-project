@model ChrisDemo.ViewModel.Item.IndexViewModel
@{
    ViewBag.Title = "Items";
}

<h2>Items</h2>

<p>
    @Html.ActionLink("Create New Item", "Create")
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                Item No.
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model.Items)
        {
            <tr>
                <td>
                    @item.ItemNumber
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                </td>
            </tr>
        }        
    </tbody>
</table>
